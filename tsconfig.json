{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "outDir": "./dist/neuralaesthetic",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    }
  },

  "include": ["src/**/*", "__tests__"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
